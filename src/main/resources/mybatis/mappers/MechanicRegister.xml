<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="kr.co.jhta.pony.dao.MechanicRegisterDAO">

	<select id="shopNoName" resultType="kr.co.jhta.pony.dto.MechanicRegisterDTO">
		SELECT 	shopNo ,
				shopArea ,
				shopAreaPoint  
		FROM SHOP
		ORDER BY shopNo ASC
	</select>
	
	<insert id="registeremployee" parameterType="kr.co.jhta.pony.dto.MechanicRegisterDTO">
		INSERT INTO MECHANIC(shopNo,mechanicPw,mechanicName) VALUES(#{shopNo},#{mechanicPw},#{mechanicName})
	</insert>
	
	<update id="updatePw" parameterType="kr.co.jhta.pony.dto.MechanicRegisterDTO">
		UPDATE MECHANIC
		SET mechanicPw = #{mechanicPw}
		WHERE mechanicNo = #{mechanicNo} AND shopNo = #{shopNo}
	</update>
	
	<select id="loginCheck" resultType="int" parameterType="kr.co.jhta.pony.dto.MechanicRegisterDTO">
		SELECT count(*) FROM MECHANIC WHERE mechanicNo = #{mechanicNo} AND mechanicPw = #{mechanicPw}
	</select>

</mapper>